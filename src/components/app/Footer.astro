---
import AppLogo from "./Logo.astro";
import { Icon } from "astro-icon/components";
import config from "@util/themeConfig";

const socials = Object.values(config.footer.socials);
const socialNames = Object.keys(config.footer.socials);

const navigation = [
  {
    title: "Directory",
    links: [
      { title: "Submit", link: "/submit" },
      { title: "Advertise", link: "/advertise" },
    ],
  },
  {
    title: "Categories",
    links: config.directoryData.tags
      ?.filter((e) => e && e.name)
      .map((e) => ({
        title: e.name,
        link: `/tags/${e.key}`,
      }))
      .slice(0, 4),
  },
  {
    title: "Blog",
    links: [{ title: "Articles", link: "/blog" }],
  },
  {
    title: "Legal",
    links: [
      { title: "Privacy Policy", link: "/legal/terms-of-service" },
      { title: "Terms of Service", link: "/legal/privacy-policy" },
    ],
  },
];
---

<footer
  class="border-t-2 border-[hsl(var(--border))] bg-gradient-to-b from-[hsl(var(--background))] to-[hsl(var(--muted))] font-display"
  aria-labelledby="footer-heading"
>
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8">
        <AppLogo />
        <div class="flex space-x-6">
          {
            socials.map((item, index) => (
              <a href={item?.link} class="text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--primary))] transition-all duration-300 hover:scale-110">
                <span class="sr-only">{item}</span>
                <Icon
                  name={
                    config.ui.icons[
                      socialNames[index] as keyof typeof config.ui.icons
                    ]
                  }
                  class="h-6 w-6"
                  aria-hidden="true"
                />
              </a>
            ))
          }
        </div>
      </div>
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        {
          [...Array(2).keys()].map((count) => (
            <div class="md:grid md:grid-cols-2 md:gap-8">
              <div>
                <h3 class="text-sm font-semibold text-[hsl(var(--muted-foreground))] tracking-wider uppercase">
                  {navigation[count].title}
                </h3>
                <ul role="list" class="mt-6 space-y-4">
                  {navigation[count].links.map((item) => (
                    <li>
                      <a
                        href={item.link}
                        class="text-sm leading-6 text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--primary))] transition-colors duration-300 hover:underline underline-offset-4"
                      >
                        {item.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="mt-10 md:mt-0">
                <h3 class="text-sm font-semibold text-[hsl(var(--muted-foreground))] tracking-wider uppercase">
                  {navigation[count + 2].title}
                </h3>
                <ul role="list" class="mt-6 space-y-4">
                  {navigation[count + 2].links.map((item) => (
                    <li>
                      <a
                        href={item.link}
                        class="text-sm leading-6 text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--primary))] transition-colors duration-300 hover:underline underline-offset-4"
                      >
                        {item.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="mt-16 border-t-2 border-[hsl(var(--border))] pt-8 sm:mt-20 lg:mt-24"
    >
      <p class="text-xs leading-5 text-[hsl(var(--muted-foreground))]">
        &copy; {new Date().getFullYear()}
        {config.general.title} All rights reserved.
      </p>
    </div>
  </div>
</footer>
