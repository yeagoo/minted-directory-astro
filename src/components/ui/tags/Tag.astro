---
import type Tag from "../../../types/Tag";
import themeConfig from "@util/themeConfig";
const config = themeConfig.directoryData.tags;

const { tag } = Astro.props;

const configTag = config?.find((element: any) => element.key === tag);

const tagClass = configTag?.color ? `${configTag.color}-tag` : "gray-tag";
---

<span class:list={[
  "inline-flex items-center rounded-lg border-2 border-[hsl(var(--border))] px-3 py-1 text-xs font-semibold transition-all duration-200 hover:scale-105 hover:shadow-md",
  tagClass
]}>
  {configTag?.emoji && <span class="mr-1.5">{configTag.emoji}</span>}
  {configTag?.name || tag}
</span>
